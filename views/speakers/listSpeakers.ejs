<!DOCTYPE html>
<head>
    <%- include ("../include/header") -%>
    <link rel="stylesheet" href="/styles/speakers.css">
    <title>List Speakers</title>
    
</head>
<body>
    <%- include ("../include/nav") -%>
    <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">City</th>
            <th scope="col">Street</th>
            <th scope="col">Building</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
            <% userData.forEach(function(user){ %>
                <tr>
                    <th scope="row"><%= user._id %></th>
                    <td><%= user.fullname %></td>
                    <td><%= user.address.city %></td>
                    <td><%= user.address.street %></td>
                    <td><%= user.address.building %></td>
                    <td><a class="btn btn-success" href="/speakers/edit/<%= user._id %>">Edit</a></td>
                    <td><a class="btn btn-danger" href="#" onclick="removeSpeaker(<%= user._id %>,this)">Remove</a></td>

                </tr>
                <% }); %>
        </tbody>
      </table>

</body>
<script src="/js/admin.js"></script>


</html>