<!DOCTYPE html>
<head>
    <%- include ("../include/header") -%>
    <link rel="stylesheet" href="/styles/speakers.css">
    <title>List Speakers</title>
    
</head>
<body>
    <%- include ("../include/nav") -%>
    <div class="container">
    <form action="/speakers/add" method="post" >
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationDefault01">ID</label>
                <input name="_id"type="text" class="form-control" id="validationDefault01" placeholder="ID" required>
              </div>
          <div class="col-md-3 mb-3">
            <label for="validationDefault02">Full Name</label>
            <input name="fullname" type="text" class="form-control" id="validationDefault02" placeholder="Full name" required>
          </div>
          <div class="col-md-3 mb-3">
            <label for="validationDefault03">Password</label>
            <input name="password" type="password" class="form-control" id="validationDefault03" placeholder="Password"  required>
          </div>
          <div class="col-md-3 mb-3">
            <label for="validationDefaultUsername">Username</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend2">@</span>
              </div>
              <input name="username" type="text" class="form-control" id="validationDefaultUsername" placeholder="Username" aria-describedby="inputGroupPrepend2" required>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-6 mb-3">
            <label for="validationDefault04">City</label>
            <input name="address.city" type="text" class="form-control" id="validationDefault04" placeholder="City" required>
          </div>
          <div class="col-md-3 mb-3">
            <label for="validationDefault05">Street</label>
            <input name="address.street" type="text" class="form-control" id="validationDefault05" placeholder="Street" required>
          </div>
          <div class="col-md-3 mb-3">
            <label for="validationDefault06">Building</label>
            <input name="address.building" type="text" class="form-control" id="validationDefault06" placeholder="Building" required>
          </div>
        </div>
      
        <button class="btn btn-primary" type="submit">Submit form</button>
      </form>
    </div>
</body>
<script src="/js/admin.js"></script>


</html>